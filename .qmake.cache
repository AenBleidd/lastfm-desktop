win32: ROOT_DIR = $$system( cd )
else:  ROOT_DIR = $$system( pwd )

# TODO remove! confusing!
SRC_DIR = $$ROOT_DIR

macx-xcode {
    BUILD_DIR = build
} else {
    # With Xcode we generate a bundle
    BUILD_DIR = _build
    DESTDIR = $$ROOT_DIR/_bin
    LIBS += -L$$DESTDIR
}

OBJECTS_DIR = $$BUILD_DIR
MOC_DIR = $$BUILD_DIR
UI_DIR = $$BUILD_DIR
RCC_DIR = $$BUILD_DIR
INCLUDEPATH += $$ROOT_DIR


win32:DEFINES += _CRT_SECURE_NO_WARNINGS WIN32_LEAN_AND_MEAN

COMMON_LIBS_DIR = /svn/libs/cpp
